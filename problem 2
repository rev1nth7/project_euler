#include <bits/stdc++.h>
using namespace std;

using i64 = long long;   // safer alias instead of #define
const int MOD = 1e9 + 7;


int main() {
    int a=1;
    int b=2;
    int c=0;

    int ans=0;
    while(b<4000000){
        if(b%2==0)ans+=b;
        c=a+b;
        a=b;
        b=c;

    }
    cout<<ans;
    
    return 0;
}
